<?xml version="1.0" ?>
<configuration>
  <system.webServer>
    <modules>
      <remove name="WebDAVModule"/>
    </modules>
    <handlers>
      <remove name="WebDAV"/>
      <add name="Python Handler"
           path="*.py"
           verb="*"
           modules="CgiModule"
           scriptProcessor="D:\Python\python.exe %s %s"
           resourceType="Unspecified"/>
    </handlers>
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="150000000"/>
      </requestFiltering>
    </security>
    <defaultDocument enabled="false">
      <files>
      </files>
    </defaultDocument>
    <rewrite>
      <rules>
        <rule name="CDR Admin Login"
              patternSyntax="ExactMatch"
              stopProcessing="true">
          <match url="CdrAdmin.html"/>
          <action type="Redirect"
                  url="/cgi-bin/secure/admin.py"
                  appendQueryString="false"/>
        </rule>
        <rule name="Map root to admin login"
              stopProcessing="true">
          <match url="^$"/>
          <action type="Redirect"
                  url="/cgi-bin/secure/admin.py"
                  appendQueryString="false"
                  logRewrittenUrl="true"
                  redirectType="Found"/>
        </rule>
		<rule name="Static Files" stopProcessing="true">
			<match url="^cgi-bin/scheduler/static"/>
			<action type="None"/>
		</rule>
        <rule name="CDR Scheduler"
              patternSyntax="ECMAScript"
              stopProcessing="true">
          <match url="^cgi-bin/scheduler/(.*)"/>
          <action type="Rewrite"
                  url="cgi-bin/scheduler/pageproxy.py?path={R:1}"
                  logRewrittenUrl="true"/>
        </rule>
      </rules>
    </rewrite>
    <httpErrors errorMode="Custom">
      <remove statusCode="404" subStatusCode="-1"/>
      <remove statusCode="502" subStatusCode="-1"/>
      <error statusCode="404"
             prefixLanguageFilePath=""
             path="/cgi-bin/cdr/404.py"
             responseMode="ExecuteURL"/>
      <error statusCode="502"
             prefixLanguageFilePath=""
             path="/cgi-bin/cdr/502.py"
             responseMode="ExecuteURL"/>
    </httpErrors>
  </system.webServer>
  <system.web>
    <authentication mode="Windows"/>
    <customErrors mode="On" defaultRedirect="~/error/GeneralError.html">
     <error statusCode="403" redirect="~/error/Forbidden.html" />
     <error statusCode="404" redirect="~/error/PageNotFound.html" />
     <error statusCode="500" redirect="~/error/InternalError.html" />
    </customErrors>
    <httpRuntime maxRequestLength="150000" executionTimeout="1800"/>
  </system.web>
</configuration>
